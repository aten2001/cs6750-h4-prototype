
<script>
	$(document).ready(function(){
		$('.expand').hide();
		$('#page2').hide();
		$('#page3').hide();

		$('.review').click(function(e) {
			e.preventDefault();
			$('#page1').show();
			$('#page2').hide();
			$('#page3').hide();
			$('#review_panel').bPopup({
            modalClose: true,
            opacity: 0.6,
            positionStyle: 'fixed' //'fixed' or 'absolute',
        	});
        });
        $('.priority').click(function(e){
        	$('#page1').hide();
        	$('#page2').show();
        });
        $('.delete').click(function(){
        	$('#delete_modal').bPopup({
            modalClose: true,
            opacity: 0.6,
            positionStyle: 'fixed' //'fixed' or 'absolute',
        	});
        });
        $('.save').click(function(){
        	$('#page2').hide();
        	$('#page3').show();
        })
	});
</script>

<div class="pothole-table">
	<h1>
	New Pothole Reports
	</h1>
	<div class="pothole-table-header">
		<div class="pid">Location</div>
		<div class="age">Age</div>
	</div>
