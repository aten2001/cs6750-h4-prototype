		<div class="review"><a href="">Review</a></div>
		<div class="hidden expand">
			<div class="image"><%= image_tag 'pothole-thumb.png' %>
				<div class="comments">
					<h3>Comments</h3>
					<p>None</p>
				</div>
			<div class="modify"><a href="">Modify</a> / <a href="">Delete</a></div>
			</div>
		</div>
	</div>
	<div class="pothole collapsed">
		<div class="pid">2180 5th Street</div>
		<div class="age">2 days</div>
		<div class="review"><a href="">Review</a></div>
		<div class="hidden expand">
			<div class="image"><%= image_tag 'pothole-thumb.png' %>
				<div class="comments">
					<h3>Comments</h3>
